.row
  .cols-xs-12
    - if defined? title
      %h1= title
    - else
      %h1 Tell us what you need
.row
  .contact_us_form.well.col-xs-12.col-lg-5.col-md-6.col-sm-6
    = form_for :request, url: contact_us_path, method: :post do |f|
      .row
        .input-group.col-xs-12
          = f.text_field :email, placeholder: 'Your email address', class: 'form-control'
      %br
      .row
        .input-group.col-xs-12
          = f.text_area :body, rows: 5, class: 'form-control', placeholder: 'Your message'
      = f.hidden_field :requestor, value: request_from
      %br
      .row
        = f.submit 'Send', class: 'btn btn-primary'

