!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Code Malaysia'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Essay Jack'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      %nav.navbar.navbar-default.navbar.navbar-inverse.navbar-fixed-top.magic
        .container
          .center
            In collaboration with
            %a{href: "http://mymagic.my/"}
              = image_tag('magic.png', width: '90')
      = render 'layouts/navigation'
    %main{:role => "main"}
      = yield
